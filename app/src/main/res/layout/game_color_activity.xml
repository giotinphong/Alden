<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/game_color_bg"
    tools:context="com.project.sonnguyen.alden.RightOrRonActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/score_png"
        android:gravity="center|right">

        <TextView
            android:id="@+id/acti_rightron_txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/score"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_main_containt"
            android:id="@+id/linearLayout"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:id="@+id/acti_rightron_linear_color"
                android:layout_width="368dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/panel_color_display"
                android:gravity="center"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/acti_rightron_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textSize="50dp"
                    android:textStyle="bold" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity=""
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/acti_rightron_btnRon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="64dp"
                android:layout_weight="1"

                android:layout_marginStart="95dp"
                android:src="@drawable/ic_ron" />

            <ImageView
                android:id="@+id/acti_rightron_btnRight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/acti_rightron_btnRon"
                android:layout_marginEnd="90dp"
                android:src="@drawable/ic_right" />


        </LinearLayout>
        </LinearLayout>




</LinearLayout>
