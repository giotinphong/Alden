<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.project.sonnguyen.alden.fragment.StudentInforFragment">

    <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:scaleType="centerCrop"
            android:id="@+id/frag_student_infor_img_avatar">
        </ImageView>
    <android.support.design.widget.FloatingActionButton
        android:src="@android:drawable/ic_menu_call"
        app:fabSize="normal"
        android:id="@+id/frag_student_infor_fab_call"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/frag_student_infor_img_avatar"
        android:layout_marginBottom="-25dp"
        android:layout_alignEnd="@+id/frag_student_infor_img_avatar"
        android:layout_marginEnd="30dp"

        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/frag_student_infor_txt_studentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasdasdasd"
        android:layout_below="@+id/frag_student_infor_img_avatar"
        android:layout_alignStart="@+id/linearLayout5"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_lager_size"/>
    <ScrollView
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/frag_student_infor_img_avatar"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_birthday" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinh nhật :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frag_student_infor_txt_bithday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/08/2010"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_class" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frag_student_infor_txt_classname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AL1"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginRight="5dp"
                android:src="@drawable/ic_teacher" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giáo viên :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frag_student_infor_txt_teachername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lê Thái Phượng"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"

                android:src="@drawable/ic_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Phụ Huynh :"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/frag_student_infor_txt_parentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trần Văn Tùng"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frag_student_infor_txt_parentnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01202154304"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_class_sum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sĩ số lớp :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frag_student_infor_txt_num_of_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 bé"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
